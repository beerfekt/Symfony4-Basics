  /**
     * @Route("/articles/save", name="articles-save")
     */
    public function save(/*Request $request*/)
    {
        return $this->render('articles/articles_output.html.twig',
            ['controller_name' => 'ArticleController',
                //DEV: ausgabe hier zu testzwecken
                'articles' => $this->generateTestArticleArray() ]
        );

    }


    private function generateTestArticleArray() {
        //array mit artikeln generieren (develop-test)

        //db #1
        $entityManager = $this->getDoctrine()->getManager();

        $anzahl = 3;
        $articles = array();

        for ($i = 0; $i < $anzahl; $i++)
        {
            $currentArticle =  new Article();
            $currentArticle->setTheTitle('TEST');
            $currentArticle->setTheBody('Hey du arsch, pflaume, depp!!' . $i);
            #db #2
            $entityManager->persist($currentArticle);
            $entityManager->flush();
            //DEV: abspeichern zu testzwecken und ausgabe hier
            $articles[$i] = $currentArticle;
        }

        return $articles;
    }







